<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.maola.degradotourmap.User.UserPageActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_user_page">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait"
        app:civ_border_color="@color/cardview_shadow_start_color"
        app:civ_border_width="2dp"
        app:layout_constraintRight_toLeftOf="@+id/main_user_page_txt_username"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="29dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="32dp" />

    <TextView
        android:id="@+id/main_user_page_txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_user_page_txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/main_user_page_txt_username"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/main_user_page_txt_username"
        android:layout_marginLeft="4dp" />

    <TextView
        android:id="@+id/main_user_page_txt_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/settings"
        android:textColor="@color/link"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="1dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/main_user_page_txt_email"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/main_user_page_txt_email"
        android:layout_marginLeft="1dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="142dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0">

        <android.support.v7.widget.CardView
            android:id="@+id/main_user_page_card_report"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_row="1"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="188dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_row="0"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:text="@string/my_report" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/main_user_page_card_profilesettings"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:layout_row="2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="293dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="3"
                android:drawableTop="@android:drawable/ic_menu_preferences"
                android:text="@string/account_settings"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="316dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/main_user_page_card_comments"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:layout_row="1"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="188dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:drawableTop="@android:drawable/sym_action_chat"
                android:text="@string/my_comments" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_row="2"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableTop="?attr/actionModeCopyDrawable"
                android:text="TextView" />
        </android.support.v7.widget.CardView>

    </GridLayout>

</android.support.constraint.ConstraintLayout>
